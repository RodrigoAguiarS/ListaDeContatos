<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imgFoto"
            app:layout_constraintTop_toTopOf="@+id/txtNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txtTelefone"
            android:contentDescription="imgFoto_content_description"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@tools:sample/avatars"
            />
        <TextView
            android:id="@+id/txtNome"
            app:layout_constraintTop_toTopOf="@id/imgFoto"
            app:layout_constraintStart_toEndOf="@id/imgFoto"
            android:layout_marginLeft="16dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text ="Nome do contato"/>
        <TextView
            android:id="@+id/txtTelefone"
            app:layout_constraintTop_toBottomOf="@id/txtNome"
            app:layout_constraintStart_toEndOf="@id/imgFoto"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="(00)00000-0000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>